<form class="form-horizontal" role="form">

  <div class="form-group has-feedback">
    <label class="col-sm-2 control-label" for="title">Title</label>
    <div class="col-sm-10" >
      <input class="form-control" id="title" type="text" placeholder="Enter your title here"  maxlength="50" pattern=".{3,}" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <span class="help-block">Enter a title for your post.</span>
    </div>
  </div>
<div class="form-group has-feedback">
      <label class="col-sm-2 control-label" for="slug">Slug</label>
    <div class="col-sm-10" >
      <label class="pull-left slug" id=""></label>
      <input class="clickedit slug form-control" type="text" hidden>
      <div class="clearfix"></div>
    </div>
  </div>
